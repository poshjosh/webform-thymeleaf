<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
    <property name="LOGS" value="./logs" />
    
    <springProfile name="dev | test | prod">
        <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOGS}/spring-boot-logger.log</file>
            <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <!--Pattern>%d %p %C{1.} [%t] %m%n</Pattern-->
                <Pattern>%d{HH:mm:ss} %p %C{0} %m%n</Pattern>
                <charset>utf8</charset>
            </encoder>

            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily and when the file reaches 10 MegaBytes -->
                <fileNamePattern>${LOGS}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
                </fileNamePattern>
                <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>10MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
        </appender>

    </springProfile>

    <springProfile name="dev | test">

        <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <!--
                <Pattern>
                    %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
                </Pattern>
                -->
                <Pattern>
                    %black(%d{HH:mm:ss}) %highlight(%-5level) %yellow(%C{0}): %msg%n%throwable
                </Pattern>
            </layout>
        </appender>

        <root level="debug">
            <appender-ref ref="RollingFile" />
            <appender-ref ref="Console" />
        </root>

        <logger name="com.bc.webform.app" level="debug" additivity="false">
            <appender-ref ref="RollingFile" />
            <appender-ref ref="Console" />
        </logger>
    </springProfile>

    <springProfile name="prod">

        <root level="info">
            <appender-ref ref="RollingFile" />
        </root>

        <logger name="com.bc.webform.app" level="info" additivity="false">
            <appender-ref ref="RollingFile" />
        </logger>
    </springProfile>
 
</configuration>